@using Microsoft.Web.Optimization
@using Teamworks.Web.Views
<!doctype html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7]> <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
<!--[if IE 7]>    <html class="no-js lt-ie9 lt-ie8" lang="en"> <![endif]-->
<!--[if IE 8]>    <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!-- Consider adding a manifest.appcache: h5bp.com/d/Offline -->
<!--[if gt IE 8]><!--><html class="no-js" lang="en"><!--[endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>@ViewBag.Title Teamworks</title>
    <meta name="description" content="teamworks">
    <meta name="author" content="Filipe Pinheiro, João Santos"/>
    <!-- Mobile viewport optimized: h5bp.com/viewport -->
    <meta name="viewport" content="width=device-width">
    <!-- Place favicon.ico and apple-touch-icon.png in the root directory: mathiasbynens.be/notes/touch-icons -->
    <!-- Custom font from google -->
    <link rel="stylesheet" href="@BundleTable.Bundles.ResolveBundleUrl("~/css")" >
    <!-- More ideas for your <head> here: h5bp.com/d/head-Tips -->
    <!-- All JavaScript at the bottom, except this Modernizr build.
        Modernizr enables HTML5 elements & feature detects for optimal performance.
        Create your own custom Modernizr build: www.modernizr.com/download/ -->
    <script src="@Url.Content("~/content/js/libs/modernizr-2.5.3-respond-1.1.0.min.js")"> </script>
</head>
<body>
    <!--[if lt IE 9]><p class="chrome-frame alert alert-error">Your browser is <em>ancient!</em> <a href="http://browsehappy.com/">Upgrade to a different browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to experience this site correctly.</p><![endif]-->
    <header class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <nav class="container-fluid">
                @Html.ActionLink("teamworks", "View", "Home", null, new {@class = "brand span2"})
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>      
                @Html.Identity()
                <div class="nav-collapse">
                    <ul class="nav">
                        <li class="@Html.ActiveController("Home")"><a href="@Url.Action("View", "Home")"><i class="icon-home icon-white"></i>Home</a></li>
                        <li class="@Html.ActiveController("Projects")"><a href="@Url.Action("View", "Projects", new { identifier     = UrlParameter.Optional })">Projects</a></li>
                    </ul>
                </div>
            </nav>
        </div>
        <div class="global-messages"data-bind="template: { name: 'messages-template', foreach: messages}"></div>
        <script type="text/html" id="messages-template">
            <div class="alert alert-error" data-bind="text: message"></div>
        </script>
    </header>
    <div class="main container-fluid" role="main" data-bind="with: viewmodel">
        <div class="row-fluid">
            <div class="span2">
                @RenderSection("SideBar", false)
            </div>
            <div class="span8">
                @RenderBody()
            </div>
        </div>
        
    </div>
    <footer></footer>
    <!-- JavaScript at the bottom for fast page loading -->
    <!-- Grab Google CDN's jQuery, with a protocol relative URL; fall back to local if offline -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"> </script>
    <script> window.jQuery || document.write('<script src="@Url.Content("~/content/js/libs/jquery-1.7.2.min.js")"><\/script>') </script>
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="@BundleTable.Bundles.ResolveBundleUrl("~/js")"> </script>
    
    @{
        if (Html.IsDebugging())
        {
            <script src="@Url.Content("~/content/js/libs/bootstrap/bootstrap.js")"> </script>
            <script src="@Url.Content("~/content/js/libs/knockout-2.0.0.js")"> </script>
            <script src="@Url.Content("~/content/js/app/teamworks.app.js")"> </script>
            <script src="@Url.Content("~/content/js/app/teamworks.viewmodels.js")"> </script>
            <script src="@Url.Content("~/content/js/app/teamworks.js")"> </script>
        }
    }
</body>
</html>