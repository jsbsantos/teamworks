@using Teamworks.Web.Views

@{
    Layout = "../Shared/_Blank.cshtml";
}

<header class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <nav class="container-fluid">
            @Html.ActionLink("teamworks", "View", "Home", null, new {@class = "brand span2"})
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>      
            @Html.Identity()
            <div class="nav-collapse">
                <ul class="nav">
                    <li class="@Html.ActiveController("Home")"><a href="@Url.Action("View", "Home")"><i class="icon-home icon-white"></i>Home</a></li>
                    <li class="@Html.ActiveController("Projects")"><a href="@Url.Action("View", "Projects", new {identifier = UrlParameter.Optional})">Projects</a></li>
                </ul>
            </div>
        </nav>
    </div>
        
</header>
<div class="span8 global-messages" data-bind="visible: alerts().length > 0, template: { name: 'alert-template', foreach: alerts}"></div>
<!-- message template -->
<script type="text/html" id="alert-template">
    <div class="span6 alert fade in">
        <button class="close" data-dismiss="alert" data-bind="click: $parent.alerts._remove">×</button>
        <span data-bind="text: message"></span>
    </div>
</script>
<div class="main container" role="main" data-bind="visible: ready, with: viewmodel">
    @RenderBody() 
</div>
<footer class="well-large tc">
    <p>© Copyright 2012 Filipe Pinheiro(@@fampinheiro) e João Santos.</p>
</footer>