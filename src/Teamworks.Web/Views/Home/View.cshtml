@model dynamic
@{
    ViewBag.Title = "teamworks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <form class="form-inline" data-bind="submit: create">
        <input name="name" placeholder="Name your project" data-bind="value: project.name, valueUpdate: 'afterkeyup', css: { error: project.name.has_error }" />
        <input name="description" placeholder="Describe your project" data-bind="value: project.description, valueUpdate: 'afterkeyup', css: { error: project.name.has_error }" />
        <button class="btn" type="submit">Start working</button>
    </form>
</div>
<div class="thumbnails" data-bind="template: { name: 'project-template', foreach: projects }"></div>

<script type="text/html" id="project-template">
    <section class="span3">
        <div>
            <h2><a data-bind="text: name, attr: { href: url }"></a></h2>
            <p data-bind="text: description"></p>
            <form class="btn-group" data-bind="submit: $parent.remove">
                <button class="btn" type="submit" name="remove">Remove</button>
            </form>
        </div>
    </section>
</script>

