@using Teamworks.Core.Services
@model IList<Teamworks.Core.Activity>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <header class="page-header">
        <h1>Welcome back!</h1>
    </header>
    <section>
    @if(Model.Count == 0)
    {
        <p class="lead">You have no activities assigned to you.</p>
    } else
    {
       
        <p class="lead">These are the activities you are assigned to.</p>
        foreach (var activity in Model)
        {
            <div class="lead">
                <h3><a href="@Url.RouteUrl("activities_details", new { projectId = activity.Project.ToIdentifier(), activityId = activity.Id.ToIdentifier() })">@activity.Name</a>
                <small>
                    @activity.Description
                </small>
                 </h3>
            </div>
        }
    }
    </section>
</div>