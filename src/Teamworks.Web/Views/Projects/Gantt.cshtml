@model dynamic
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="span9">
        <div>
            <ul class="breadcrumb">
                <li><a href="@Url.RouteUrl("default", new { controller = "Projects" })">Projects</a> <span
                                                                                                         class="divider">/</span> </li>
                <li><span data-bind="text: project.name">@Model.Name</span> </li>
            </ul>
        </div>
        <header class="lead">
            <h1>
                <span data-bind="text: project.name">@Model.Name</span> <small><i class="icon-edit">
                                                                               </i><span data-bind="text: project.description, visible: project.description">@Model.Description</span></small>
            </h1>
        </header>
    </div>
</div>
<div id="chart">
</div>
<script>

    var gantt = function() {
        return new tw.Gantt(@Html.Raw(ViewBag.ChartData));
    };
    
</script>
