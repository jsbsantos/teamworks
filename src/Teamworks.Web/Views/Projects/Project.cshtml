@model string
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div data-bind="visible: project.name">
    <header class="page-header">
        <h1>
            <span data-bind="text: project.name"></span>
            <small data-bind="text: project.description, visible: project.description"></small>
        </h1>
    </header>
    <div>
        <!-- Activities -->
        <section class="well-large span6">
            <header class="lead">
                <h2 class="inline">Activities</h2>
                <a class="btn-mini" href="#" data-bind="visible: !activity.editing(), click: function() { activity.editing(true); }">One more activity</a>
                <div class="hide well-small bottom-divider" data-bind="css: { hide: !activity.editing() }">
                    <form class="form-horizontal" data-bind="submit: project.activities.create">
                        <div class="control-group">
                            <input type="text" placeholder="Activities name" class="input-block-level" data-bind="value: activity.name, valueUpdate: 'afterkeyup'" />

                        </div>
                        <div class="control-group">
                            <button type="submit" class="btn btn-success pull-right">Start activity</button>  
                            <a class="btn-mini" data-bind="click: function() { activity.editing(false) }"><i class="icon-remove"></i> Cancel</a>                          
                        </div>
                    </form>
                </div>
            </header>
            <div class="" data-bind="template: { name: 'activities-template', foreach: project.activities }"></div>
            
            <script type="text/html" id="activities-template">
                <article class="row-fluid">
                    <ul class="pull-right nav nav-pills">
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                <i class="icon-caret-down"></i>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a data-bind="click: $parent.project.activities.remove" href="#"><i class="icon-trash"></i> Remover</a></li>
                            </ul>
                        </li>
                    </ul>
                    <div>
                        <h3>
                            <a class="well-small" data-bind="text: name, attr: { href: '/projects/' + $parent.project.id() + '/activities/' + id() }"></a>
                            </h3>
                        <p data-bind="text: description"></p>
                    </div>
                </article>
            </script>
        </section>
        
        <!-- Discussion -->
        <section class="well-large span6">
            <header class="lead">
                <h2 class="inline">Discussion</h2>
                <a class="btn-mini" href="#" data-bind="visible: !discussion.editing(), click: function() { discussion.editing(true); }">One more discussion</a>
                <div class="hide well-small bottom-divider " data-bind="css: { hide: !discussion.editing() }">
                    <form class="form-horizontal" data-bind="submit: project.discussions.create">
                        <div class="control-group">
                            <input type="text" class="input-block-level" placeholder="Discussion name" data-bind="value: discussion.name, valueUpdate: 'afterkeyup'" />
                        </div>
                        <div class="control-group">
                            <button type="submit" class="btn btn-success pull-right">Start discussing</button>  
                            <a class="btn-mini" data-bind="click: function() { discussion.editing(false) }"><i class="icon-remove"></i> Cancel</a>  
                        </div>
                    </form>
                </div>
            </header>
            <div data-bind="template: { name: 'discussion-template', foreach: project.discussions }"></div>

            <div class="more-options">To create a new discussion you can send an email to  
                <a id="ediscussion" target="_blank" data-bind="attr: { href: 'mailto:' + project.token() }">
                    an email created just for you
                </a>
                <i class="icon-copy"></i>
            </div>
            
            <script type="text/html" id="discussion-template">
                <article class="row-fluid">
                    <ul class="pull-right nav nav-pills">
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                <i class="icon-caret-down"></i>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a data-bind="click: $parent.project.discussions.remove" href="#"><i class="icon-trash"></i> Remover</a></li>
                            </ul>
                        </li>
                    </ul>
                    <div>
                        <h3>
                            <a data-bind="text: name, attr: { href: '/projects/' + $parent.project.id() + '/discussions/' + id() }"></a>
                        </h3>
                        <p class="inline" data-bind="text: content"></p>
                    </div>
                </article>
            </script>
        </section>
    </div>
    
    <script>
        var viewmodel = function() {
            return new TW.viewmodels.Project('@Model');
        };
    </script>
</div>

@section Right
{
    <section class="people">
        <h2>People</h2>
        <ul class="thumbnails" data-bind="template: { name: 'person-template', foreach: project.people }"></ul>
        <a href="#" class="more-options" data-bind="visible: !people.editing(), click: function() { people.editing(true); }" >Invite another person to join this project</a>
        <div class="row-fluid hide" data-bind="css: { hide: !people.editing() }">
            <form class="form-horizontal" data-bind="submit: project.people.add">
                <!-- ko foreach: people -->
                <div>
                    <a class=" btn-mini pull-left" data-bind="click: function() { $parent.people.remove($data) }"><i class="icon-remove"></i></a>  
                    <input type="text" class="span11" placeholder="Who do you wanto to add" data-bind="value: id"/>
                </div>
                <!-- /ko -->
                <div class="well-small">
                    <button class="btn btn-success" type="submit">Add them all</button>
                    <a class="btn-mini pull-right" data-bind="click: function() { people.more() }"><i class="icon-plus"></i> Add more</a>
                    <a class="btn-mini pull-right clear-right" data-bind="click: function() { people.editing(false) }"><i class="icon-remove"></i> Cancel</a>  
                </div>
            </form>
        </div>
    </section>
    
    <script type="text/html" id="person-template">
        <li class="dropdown">
            <a class="thumbnail dropdown-toggle inline" data-toggle="dropdown" rel="tooltip-top" data-bind="attr: { href: '#', 'title': name }">
                <img data-bind="attr: { src: gravatar.small }" />
            </a>               
            <ul class="dropdown-menu well-small">
                <img class="pull-left" data-bind="attr: { src: gravatar.medium }" />
                <div>
                    <p data-bind="text: username"></p>
                    <h3><a data-bind="text: name"></a></h3>
                    <p data-bind="text: email"></p>
                    <form class="more-options clear-left pull-right" data-bind="submit: $parent.project.people.remove">
                        <button class="btn" type="submit" name="remove">Remove from project</button>
                    </form>
                </div>
            </ul>
        </li>
    </script>
}