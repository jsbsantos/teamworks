@using Teamworks.Web.Helpers.Extensions
@model Teamworks.Web.Models.ProjectModel
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="project">
    <header class="jumbotron subhead">
        <h1>@Model.Name <small>@Model.Description</small></h1>
        <div class="subnav subnav-fixed">
            <ul class="nav nav-pills">
                <li><a href="#project_tasks"><span data-bind="text: tasks.tasks().length"></span>&nbsp;tasks</a></li>
            </ul>
        </div>
        <div class="modal hide" id="task-modal">
            <div class="modal-header">
                <h1>
                    Create a task</h1>
            </div>
            <div class="modal-body">
                <form class="form-inline" data-bind="submit: tasks.create">
                <input class="input-medium" name="name" placeholder="Name your task" data-bind="value: tasks.task.name, valueUpdate: 'afterkeyup'" />
                <input class="input-large" name="description" placeholder="Describe your task" data-bind="value: tasks.task.description, valueUpdate: 'afterkeyup'" />
                <button class="btn" type="submit">
                    Create</button>
                </form>
            </div>
        </div>
    </header>
    <section id="project_tasks">
        <div class="page-header">
            <h1>
                tasks <a data-toggle="modal" href="#task-modal"><i class="icon-plus-sign">
                    </i></a></h1>
        </div>
        <div class="row">
            <p data-bind="visible: tasks.tasks().length == 0">
                    Create your first task 
                </p>
            <div class="span6" data-bind="template: { name: 'tasks-template', foreach: tasks.tasks }">
                
            </div>
        </div>
    </section>
    <script type="text/javascript" language="javascript">
    var data = @Html.Raw(Model.ToJson())
    </script>
    <script type="text/html" id="tasks-template">
        <section class="span3">
            <div>
                <h2><a data-bind="text: name, attr: { href: url }"></a></h2>
                <p data-bind="text: description"></p>
                <form class="btn-group" data-bind="submit: $parent.tasks.remove">
                    <button class="btn" type="submit" name="remove">Remove</button>
                </form>
            </div>
        </section>
    </script>
</div>
