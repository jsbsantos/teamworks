@using Teamworks.Web.Models.Api
@model Teamworks.Web.Models.Api.Project

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="span9">
        <div>
            <ul class="breadcrumb">
                <li>
                    <a href="@Url.RouteUrl("default", new {controller = "Projects"})">Projects</a>
                    <span class="divider">/</span>
                </li>
                <li>
                    @Model.Name
                </li>
            </ul>
        </div>
        <header class="lead">
            <h1>
                @Model.Name
                <small> <i class="icon-edit"></i> @Model.Description</small>
            </h1>
        </header>
        <!-- Activities -->
        <section>
            <!-- ko foreach: activities -->
            @{
                var activities = ViewBag.Activities as IEnumerable<Activity>;
                foreach (var act in activities)
                {
                    <div>
                        <button class="close" data-bind="click: $parent.activities._remove">&times;</button>
                        <h3>
                            <a href="#">
                                <span data-bind="text: name">@act.Name</span>
                                <small data-bind="text: description">@act.Description</small>
                            </a>
                        </h3>
                    </div>
                }
            }
            <!-- /ko -->
        </section>
    </div>
</div>

<script>
    var viewmodel = function () {
        return new tw.viewmodels.Project('');
    };

</script>