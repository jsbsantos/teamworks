@model Teamworks.Web.ViewModels.Mvc.AccountViewModel

@{
    ViewBag.Title = "Sign In";
    Layout = "~/Views/Shared/_Root.cshtml";
}

<div class="row">
    <div class="offset1 span10">
        <header class="page-header">
            <h1>
                Sign In
            </h1>
            <p>Sign into your Teamworks account with the username or email and a previously chosen password.</p>
        </header>
        <div class="row">
            <div class="span6">
                @Html.ValidationSummary()
                <form  method="post" class="form-horizontal" action="@Url.Action("Index", "Account")">
                    <div class="control-group">
                        <input name="username" placeholder="Username" value="@Model.Username"/>
                    </div>
                    <div class="control-group">
                        <input  name="password" placeholder="Insert your password here" type="password" />
                    </div>
                    <div>
                        <button class="btn btn-success" type="submit" value="signup">Sign In</button>
                        <span class="row help-inline"><label class="span3 checkbox">Remember me?<input type="checkbox" name="persist" value="true"></label></span>
                    </div>
                    <a href="@Url.RouteUrl("default", new { controller = "Password", action = "Reset" })">Reset password</a>
                </form>
            </div>
            <div class="span4">
                <h3>No Account Yet?</h3>
                <div>@Html.ActionLink("Register", "Register", "Account") today.</div>
                <br>
                <h3>External services</h3>
                <div>Do you already have an account on one of these sites? Click the logo to log in with it here:</div>
                <br>
                <ul class="thumbnails">
                    <li class="span1">
                        <a class="thumbnail" href="@Url.Action("OpenId", "Account", new { provider = "https://www.google.com/accounts/o8/id" })">
                            <img src="~/Content/img/google.png" alt="google openid"/>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>