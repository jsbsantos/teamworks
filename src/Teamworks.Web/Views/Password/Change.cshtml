@model Teamworks.Web.Controllers.Mvc.PasswordViewModel

@{
    ViewBag.Title = "Change password";
    Layout = "~/Views/Shared/_Root.cshtml";
}

<header class="page-header">
    <h1>Define password
    <small>Use the form below to define your password</small></h1>    
</header>
<div>
    <form  method="post" class="form-horizontal" action="@Url.RouteUrl("password_change")">
        <div class="control-group">
            <input  name="password" placeholder="Password" type="password" />
        </div>
        <div class="control-group">
            <input  name="passwordConfirm" placeholder="Confirm password" type="password" />
        </div>
        <div>
            <button class="btn btn-success" type="submit" value="signup">Reset</button>
        </div>
    </form>
</div>
